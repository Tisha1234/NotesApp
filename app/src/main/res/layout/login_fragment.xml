<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/im1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textStyle="bold|italic"
        android:text="Every thought, every idea, every inspiration - they all deserve a place to be remembered. Let me be your canvas, your sanctuary, where your mind's whispers turn into written echoes, preserved for eternity."
        android:textColor="@android:color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Google"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="24dp"/>

</LinearLayout>
